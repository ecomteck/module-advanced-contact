<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="ec_advancedcontact" class="Ecomteck\AdvancedContact\Block\Widget\ContactForm">
        <label translate="true">Ecomteck AdvancedContact: Contact Form</label>
        <description translate="true">Show a contact form</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true" required="true">
                <label translate="true">Title</label>
                <description><![CDATA[Input block title, empty to hide.]]></description>
            </parameter>
            <parameter name="custom_template" xsi:type="text" visible="true" required="false">
                <label translate="true">Custom Template</label>
                <description><![CDATA[Input custom template file path. Example: Ecomteck_AdvancedContact::widget/form.phtml]]></description>
            </parameter>
        </parameters>
    </widget>
</widgets>
